<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alegend.www.al" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:name=".base.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.alegend.www.al.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alegend.www.al.activities.JSONObjectActivity"
            android:label="@string/activity_title_JSON_object"
            android:parentActivityName="com.alegend.www.al.activities.MainActivity"/>

        <activity
            android:name="com.alegend.www.al.activities.JSONArrayActivity"
            android:label="@string/activity_title_JSON_array"
            android:parentActivityName="com.alegend.www.al.activities.MainActivity"/>

        <activity
            android:name="com.alegend.www.al.activities.NetworkImageViewActivity"
            android:label="@string/activity_title_network_image_view"
            android:parentActivityName="com.alegend.www.al.activities.MainActivity"/>

        <activity
            android:name="com.alegend.www.al.activities.ImageRequestActivity"
            android:label="@string/activity_title_image_request"
            android:parentActivityName="com.alegend.www.al.activities.MainActivity"/>
    </application>

</manifest>
